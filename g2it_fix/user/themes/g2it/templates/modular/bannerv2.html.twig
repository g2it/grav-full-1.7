{% block more_js %}
  {% set script %}
     $(document).ready(function(){
       var percent = 0, bar = $('.transition-timer-carousel-progress-bar'), desktopCrsl = $('#desktop-slider'), mobileCrsl = $('#mobile-slider');
     	function progressBarCarousel() {
     		bar.css({width:percent+'%'});
     		percent = percent +0.2;
     		if (percent>100) {
     			percent=0;
     			desktopCrsl.carousel('next');
     			mobileCrsl.carousel('next');
     		}      
     	}
     	
     	/* desktop carousel script */
     	desktopCrsl.carousel({
     		interval: false,
     		pause: true
     	}).on('slid.bs.carousel', function () {});var barInterval = setInterval(progressBarCarousel, 30);
     	
     	desktopCrsl.hover(
     		function(){
     			clearInterval(barInterval);
     		},
     		function(){
     			barInterval = setInterval(progressBarCarousel, 30);
         })
     	/* mobile carousel script */
     		mobileCrsl.carousel({
     			interval: false,
     			pause: true
     		}).on('slid.bs.carousel', function () {});var barInterval = setInterval(progressBarCarousel, 30);
     		
     		mobileCrsl.hover(
     			function(){
     				clearInterval(barInterval);
     			},
     			function(){
     				barInterval = setInterval(progressBarCarousel, 30);
     	    })

       });
  {% endset %}
  {% do assets.addInlineJs(script, {group: 'bottom'}) %}
{% endblock %}
