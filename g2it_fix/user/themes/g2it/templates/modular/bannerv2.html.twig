<div class="bannerv2 desktop">
	<div id="desktop-slider" class="carousel slide" data-interval="false" data-ride="carousel">	
    <!-- Indicators -->
    <ol class="carousel-indicators">
      {% for item in page.header.desktop_slides %}
        <li data-target="#desktop-slider" data-slide-to="{{ loop.index - 1 }}" {% if loop.first %}class="active"{% endif %}></li>
      {% endfor %}
    </ol>
		<!-- Carousel items -->
		<div class="carousel-inner">
			{% for item in page.header.desktop_slides %}
			<div class="item {% if loop.first %}active{% endif %}">
				<img class="img-responsive" src="{{ page.media.images[item.image].cache.url() }}">
	    </div>
	    {% endfor %}
		</div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#desktop-slider" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#desktop-slider" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
	</div> 
	<hr class="transition-timer-carousel-progress-bar" />
</div>

