{% for meta in page.metadata %}
  {% if meta.name != 'generator' %}
    <meta {% if meta.name %}name="{{ meta.name }}" {% elseif meta.property %}name="{{ meta.property }}" {% endif %}{% if meta.http_equiv %}http-equiv="{{ meta.http_equiv }}" {% endif %}{% if meta.charset %}charset="{{ meta.charset }}" {% endif %}{% if meta.property %}property="{{ meta.property }}" {% endif %}{% if meta.content %}content="{{ meta.content }}" {% endif %}/>
    {% if meta.name == 'description' %}
    <meta name="og:description" property="og:description" content="{{ meta.content }}" />
    <meta name="twitter:description" property="twitter:description" content="{{ meta.content }}" />
    {% endif %}
  {% endif %}
{% endfor %}
<meta name="og:title" property="og:title" content="{{ page.title }}" />
<meta name="twitter:title" property="twitter:title" content="{{ page.title }}" />
